<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('http://www.butterfly-fields.com/bedandbreakfast/panoramic_10inches.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Contact Me</h1>
                        <hr class="small">
                        <span class="subheading">Want me to make something similar to this?</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<div class="containter">
  <div class="row">
<div align="left">
   <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
  <h2>Interested in what I just did here. Shoot me a message! </h2>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :class => "form-control", :required => true %>
    <%= f.input :email, :class => "form-control", :required => true %>
    <%= f.input :message, :as => :text, :class => "form-control", :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
  <%= f.button :submit, 'Send', :class=> "btn btn-default" %>
    </div>
  <% end %>
</div>
</div>
</div>