<p id="notice"><%= notice %></p>

   

    <div class="container">
      <div class="row">
         <% @posts.each do |post| %>
        <div class="col-md-3">
           <h2><%= link_to post.title, post %></h2>
           <p><i><%= friendly_date post.created_at %></i></p>
           <p><%= post.author %></p>
           <p><%= post.body %></p>
           <p><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
         </div>
          <% end %>
       </div>
    </div>

    <br>

    <div class="container">
      <%= link_to 'New Post', new_post_path %>
    </div>

