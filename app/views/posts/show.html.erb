    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('http://www.torontocitylife.com/wp-content/uploads/2009/11/skyline-pano-3k.jpg')">
      <p id="notice"><%= notice %></p>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                      <h1><%= @post.title%></h1>
                      <h2 class="subheading"><%= @post.desc %></h2>
                        <span class="meta">Posted by <%= @post.author %> on <%= friendly_date @post.created_at %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p><%= @post.body.html_safe %></p>
                </div>
            </div>
        </div>
    </article>
      <div class="container">
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Back', posts_path %>
        <div class="container">
    <div class="row">
      <div class="col-6-md">
        <%= render @post.comments %>
      </div>
     </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
  <h4> New Comment </h4>
      <%= form_for [@post, @post.comments.build] do |f| %>
      <div class ="input-field">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
       <div class ="input-field">
         <%= f.label :email_address %>
         <%= f.text_field :email_address, class: "form-control" %>
      </div>

      <div class="input-field">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit class: "btn btn-default" %>
      </div>

      <% end %>
  </div>
  </div>
        </div>
    <hr>
