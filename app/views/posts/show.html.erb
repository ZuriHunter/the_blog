<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= @post.title %></h2>
    </div>
  </div>

    <div class="row">
      <div class="col-md-12">
        <p><%= @post.body %></p>
      </div>
  </div>
  <div class="container">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
  
  <br>
  
  <div class="container">
    <div class="row">
      <div class="col-6-md">
        <%= render @post.comments %>
      </div>
     </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
  <h4> New Comment </h4>
      <%= form_for [@post, @post.comments.build] do |f| %>
      <div class ="input-field">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
       <div class ="input-field">
         <%= f.label :email_address %>
         <%= f.text_field :email_address, class: "form-control" %>
      </div>

      <div class="input-field">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit class: "btn btn-default" %>
      </div>

      <% end %>
  </div>
  </div>

        
</div>
